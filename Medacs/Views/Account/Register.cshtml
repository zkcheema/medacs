@model Medacs.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>


<form name="Register" novalidate ng-controller="Account">

    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="control-label col-md-2" for="codesstandalone">UserName</label>
        <div class="col-md-10">
            <input type="text" id="UserName" name="RegisterUserName" ng-model="Register.UserName" placeholder="UserName" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="codesstandalone">Password</label>
        <div class="col-md-10">
            <input type="password" id="Password" name="RegisterPassword" ng-model="Register.Password" placeholder="Password" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="codesstandalone">ConfirmPassword</label>
        <div class="col-md-10">
            <input type="password" id="Password" name="RegisterConfirmPassword" ng-model="Register.ConfirmPassword" placeholder="Password" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="codesstandalone">FirstName</label>
        <div class="col-md-10">
            <input type="text" id="FirstName" name="RegisterFirstName" ng-model="Register.FirstName" placeholder="FirstName" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="codesstandalone">LastName</label>
        <div class="col-md-10">
            <input type="text" id="LastName" name="RegisterLastName" ng-model="Register.LastName" placeholder="LastName" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="codesstandalone">Address</label>
        <div class="col-md-10">
            <input type="text" id="Address" name="RegisterAddress" ng-model="Register.Address" placeholder="Address" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="codesstandalone">PostCode</label>
        <div class="col-md-10">
            <input type="text" id="PostCode" name="RegisterPostCode" ng-model="Register.PostCode" placeholder="PostCode" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="codesstandalone">Profession</label>
        <div class="col-md-10">

            <select ng-model="Profession" ng-options="item.profession for item in professionList" >Prfession</select>


        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" ng-click="Signup(Register)" class="btn btn-default" value="Register" />{{test}}

        </div>
    </div>

</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
