@model Medacs.Areas.Admin.Models.ViewModel.FeedBackSectionViewModel

<form name="FeedBackSection" novalidate>
    <div class="form-horizontal">
        <h4>FeedBackSections</h4>
        
        <input type="hidden" name="FeedBackId" value="@Model.FeedBackId" /> 
      <div class="form-group">
            <label class="control-label col-md-2" for="codesstandalone">Section Name</label>
            <div class="col-md-10">
                <input type="text" id="Name" name="Name" ng-model="FeedBackSection.SectionName" placeholder="Section Name" />
             </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="codesstandalone">SectionTitle</label>
         <div class="col-md-10">
             <input type="text" id="Title" name="Title" ng-model="FeedBackSection.SectionTitle" placeholder="Section Title" />
              </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="codesstandalone">SectionSubTitle</label>
            <div class="col-md-10">
                <input type="text" id="SubTitle" name="SubTitle" ng-model="FeedBackSection.SectionSubTitle" placeholder="Section Title" />
               </div>
        </div>

        <div class="form-group">
            
            <label class="control-label col-md-2" for="codesstandalone">SectionSubHeading</label>
            <div class="col-md-10">
                <input type="text" id="SubHeading" name="SubHeading" ng-model="FeedBackSection.SectionSubHeading" placeholder="Section Title" />
              
            </div>
        </div>

        <div class="form-group">
            
            <label class="control-label col-md-2" for="codesstandalone">SectionRequired</label>
            <div class="col-md-10">
                <input type="checkbox" id="Required" name="Required" ng-model="FeedBackSection.SectionRequired" placeholder="Section Title" />

            </div>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <input type="button" class="btn btn-primary" ng-click="AddFeedBackSection(FeedBackSection)" id="submit" value="AddSection" class="btn" />
        </div>
    </div>
    
</form>
